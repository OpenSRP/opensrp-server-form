<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main">
	<target name="main">
		<echo message="Dropping Couch DBs: START" />
		<exec executable="curl">
			<arg value="-s" />
			<arg value="-S" />
			<arg value="-X" />
			<arg value="DELETE" />
			<arg
				value="http://${couchdb.username}:${couchdb.password}@${couchdb.server}:${couchdb.port}/${couchdb.db.opensrp}" />
			<arg
				value="http://${couchdb.username}:${couchdb.password}@${couchdb.server}:${couchdb.port}/${couchdb.db.form}" />
			<arg
				value="http://${couchdb.username}:${couchdb.password}@${couchdb.server}:${couchdb.port}/${couchdb.db.motech-scheduletracking}" />
		</exec>
		<echo message="Dropping Couch DBs: END" />
	</target>
</project>